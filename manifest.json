{

  "manifest_version": 2,
  "name": "Whatsapp Emoji",
  "version": "1.1",

  "background": {
    "persistent": true,
    "scripts": [
      "background.js"
    ]
  },
  "permissions": [
    "activeTab",
    "webRequest",
    "webRequestBlocking",
    "*://*/*"
  ],
  "web_accessible_resources": [
    "injected.js",
    "serviceworker.js"
  ]
}
